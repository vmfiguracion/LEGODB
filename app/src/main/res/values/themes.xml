<resources xmlns:tools="http://schemas.android.com/tools">
    <!--https://developer.android.com/reference/kotlin/androidx/compose/material/Colors-->

    <!-- Base application theme. -->
    <style name="Theme.LegoDatabase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. Light Mode -->
        <!--Primary branding colour for the app -->
        <item name="colorPrimary">@color/background_light</item>
        <!-- Alternate shade of the given colour -->
        <item name="colorPrimaryVariant">@color/header_and_footer_light</item>
        <!-- A colour which contrasts against the named colour -->
        <item name="colorOnPrimary">@color/individual_light</item>

        <!-- https://medium.com/androiddevelopers/android-styling-common-theme-attributes-8f7c50c9eaba -->
        <!-- not here:
        Colours: colorSurface, colorPrimarySurface, colorError, colorControlNormal, colorControlActivated, colorControlHighlight
        Dimens: listPreferredItemHeight, actionBarSize
        Drawables: seclectableItemBackground, selectableItemBackgroundBorderless, dividerVertical-->

        <!-- The background for the screen -->
        <item name="android:colorBackground">@color/background_light</item>
        <!-- Style for all of the buttons -->
        <item name="buttonStyle">@color/button_light</item>
        <!-- Most prominent text color -->
        <item name="android:textColorPrimary">@color/uneditable_text_light</item>
        <!-- Secondary text color -->
        <item name="android:textColorSecondary">@color/editable_text_light</item>
        <!-- Drawable that may be used as a horizontal divider between visual elements -->
        <item name="dividerHorizontal">@color/bar_separation_light</item>

        <!-- Button Styles -->
        <!--<item name="materialButtonStyle">@style</item>-->

        <!-- Secondary brand color. (ie the fancy multiple colours)
        Secondary branding colour for the app, usually a bright complement to the primary branding colour
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
         Status bar color.
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        Customize your theme here. -->
    </style>

    <!--
      Font family: Roboto
      Line height: 24sp
      (identical to box height)
      translationY 0.28sp compensates for the line height adjustment of text
    -->
    <!-- styles.xml -->
    <style name="title_home">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/uneditable_text_light</item>
    </style>

</resources>